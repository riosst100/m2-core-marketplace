<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <css src="Lofmp_CouponCode::css/styles.css" />
    </head>
    <body>
        <referenceBlock name="page.main.title">
                <action method="setPageTitle">
                    <argument translate="true" name="title" xsi:type="string">My Coupon Code</argument>
                </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Lofmp\CouponCode\Block\Index" name="my_coupon_code" template="Lofmp_CouponCode::mycoupon.phtml" cacheable="false"></block>
        </referenceContainer>
    </body>
</page>
