<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::smtpemail_elements" title="Price Comparisson"> 
                    <resource id="Lofmp_PriceComparison::price" title="Product" sortOrder="20">
                        <resource id="Lofmp_PriceComparison::product" title="Product" sortOrder="10" />
                        <resource id="Lofmp_PriceComparison::product_edit" title="Product Edit" sortOrder="20" />
                        <resource id="Lofmp_PriceComparison::product_save" title="Product Save" sortOrder="30" />
                        <resource id="Lofmp_PriceComparison::product_delete" title="Product Delete" sortOrder="40" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Lofmp_PriceComparison::config_pricecomparison" title="Price Comparison" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>