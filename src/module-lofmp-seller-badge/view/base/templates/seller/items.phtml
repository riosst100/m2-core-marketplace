/**
 * item
 *
 * @var $block \Lofmp\SellerBadge\Block\AbstractBadge
 */

$_badgeCollection = $block->getData('badge_collection');
?>

<ul>
    <?php foreach ($_badgeCollection as $_badge) : ?>
        <li>
            <span class="lofmp-badges__wrapper hint--top"
                  aria-label="<?= $block->escapeHtmlAttr($block->getBadgeTitle($_badge)) ?>">
                <img class="lofmp-badges__wrapper__image"
                     src="<?= $block->escapeHtmlAttr($block->getBadgeImage($_badge)) ?>"
                     alt="<?= $block->escapeHtmlAttr($_badge->getBadgeName()) ?>">
            </span>
        </li>
    <?php endforeach; ?>
</ul>
