<?php
/**
 * Badge Tab
 *
 * @var $block \Lofmp\SellerBadge\Block\Adminhtml\Seller\Edit\Tab\BadgeTab
 * @var $helper \Lofmp\SellerBadge\Helper\Data
 */

$_badgeCollection = $block->getBadgeCollection();

if (!$_badgeCollection->count()) {
    return;
}
?>

<fieldset class="fieldset admin__fieldset">
    <legend class="admin__legend legend">
        <span><?= $block->escapeHtml(__('Seller Badge(s)')) ?></span>
    </legend>
    <?php if (!$_badgeCollection->count()) : ?>
        <div class="info notify empty">
            <div><?= $block->escapeHtml(__('Badge not found on this seller account!')) ?></div>
        </div>
    <?php else: ?>
    <div class="lofmp-badges lofmp-badges--medium">
        <?= $this->getLayout()->createBlock(\Lofmp\SellerBadge\Block\Adminhtml\Seller\Edit\Tab\BadgeTab::class)
            ->setBadgeCollection($_badgeCollection)
            ->setTemplate("Lofmp_SellerBadge::seller/items.phtml")->toHtml(); ?>
        <?php endif; ?>
    </div>
</fieldset>
