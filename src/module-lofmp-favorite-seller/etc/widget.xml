<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="lofmp_favoriteseller_suggestion_product" class="Lofmp\FavoriteSeller\Block\Widget\SuggestionProduct">
        <label translate="true">Lofmp FavoriteSeller: Suggestion Product From Favorite Seller</label>
        <description>Lofmp FavoriteSeller Module</description>
        <parameters>
            <parameter name="title" xsi:type="text" required="true" visible="true" sort_order="10" >
                <label translate="true">Title</label>
            </parameter>
            <parameter name="number_product" xsi:type="text" required="true" visible="true" sort_order="20" >
                <label translate="true">Number Products</label>
                <value>5</value>
            </parameter>
            <parameter name="template" xsi:type="select" required="true" visible="true" sort_order="30">
                <label translate="true">Template</label>
                <options>
                    <option name="default" value="widget/content/grid.phtml" selected="true">
                        <label translate="true">Products Grid Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>