<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <lofsmtpemail>
            <general_settings>
                <enable_smtp_email>1</enable_smtp_email>
                <enable_email_log>1</enable_email_log>
                <enable_email_debug>1</enable_email_debug>
            </general_settings>
            <smtp_config>
                <provider>0</provider>
                <auth>NONE</auth>
                <ssl>none</ssl>
                <smtphost></smtphost>
                <port>25</port>
                <smtpport>25</smtpport>
                <set_reply_to>1</set_reply_to>
                <set_from>0</set_from>
                <set_return_path>1</set_return_path>
            </smtp_config>
            <clear>
                <log>0</log>
                <debug>0</debug>
            </clear>
            <trans_email>
                <same_smtp>0</same_smtp>
            </trans_email>
        </lofsmtpemail>
    </default>
</config>
