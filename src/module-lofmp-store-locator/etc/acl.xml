<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
	<acl>
		<resources>
			<resource id="Magento_Backend::admin">
				<resource id="Magento_Backend::storelocator_elements" title="Lof StoreLocator">
					<resource id="Lofmp_StoreLocator::storelocator" title="StoreLocator" sortOrder="10">
						<resource id="Lofmp_StoreLocator::storelocator_edit" title="Edit StoreLocator" sortOrder="10" />
