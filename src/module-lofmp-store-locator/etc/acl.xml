						<resource id="Lofmp_StoreLocator::category_edit" title="Edit Category" sortOrder="60" />
						<resource id="Lofmp_StoreLocator::category_save" title="Save Category" sortOrder="70" />
						<resource id="Lofmp_StoreLocator::category_delete" title="Delete Category" sortOrder="80" />
					</resource>
				</resource>
				<resource id="Magento_Backend::stores">
					<resource id="Magento_Backend::stores_settings">
						<resource id="Magento_Config::config">
							<resource id="Lofmp_StoreLocator::config_storelocator" title="Lof StoreLocator" />
