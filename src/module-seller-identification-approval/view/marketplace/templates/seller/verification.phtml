<script>
    require([
        "jquery"
    ], function ($) {
        $(document).ready(function () {
            var ids = [];
            $('.delete-old').on('click', function () {
                var deleteId = $(this).attr('id');
                ids.push(deleteId);
                $('[name="delete_ids"]').val(ids.toString());
                $(this).closest('[data-role="attached-item"]').remove();
            })
        })
    });
</script>
