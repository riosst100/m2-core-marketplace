<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
		<payment>
			<marketplace_paypal>
				<active>1</active>
				<title>PayPal Express Checkout</title>
				<order_status>processing</order_status>
				<calculate_type>P</calculate_type>
				<handling_fee>0</handling_fee>
				<allowspecific>0</allowspecific>
				<preselect>1</preselect>
				<model>Lofmp\MarketplacePayment\Model\PaypalExpress</model>
				<group>offline</group>
			</marketplace_paypal>
            <marketplace_razorpay>
				<active>1</active>
				<title>Razorpay</title>
				<order_status>processing</order_status>
				<calculate_type>P</calculate_type>
				<handling_fee>0</handling_fee>
				<allowspecific>0</allowspecific>
				<preselect>1</preselect>
				<model>Lofmp\MarketplacePayment\Model\Razorpay</model>
				<group>offline</group>
			</marketplace_razorpay>
		</payment>
	</default>
</config>
