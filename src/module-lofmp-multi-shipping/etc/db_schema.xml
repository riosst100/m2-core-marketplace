<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote_shipping_rate">
        <column xsi:type="varchar" name="code" nullable="true" length="1024" comment="Code"/>
        <column xsi:type="varchar" name="method" nullable="true" length="1024" comment="Method"/>
    </table>
    <table name="quote_address">
        <column xsi:type="varchar" name="shipping_method" nullable="true" length="1024"/>
    </table>
    <table name="sales_order">
        <column xsi:type="varchar" name="shipping_method" nullable="true" length="1024"/>
    </table>
</schema>
